<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/toast_tv"
        android:layout_width="@dimen/single_toast_size"
        android:layout_height="@dimen/single_toast_size"
        android:background="@drawable/kakao_sdk_index_bg"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxWidth="@dimen/single_toast_size"
        android:minWidth="@dimen/single_toast_size"
        android:padding="@dimen/single_toast_text_view_padding"
        android:textColor="?attr/gray600s"
        android:textSize="@dimen/single_toast_text_size"
        app:backgroundTint="?attr/gray050s"
        tools:backgroundTint="@color/daynight_gray050s"
        tools:textColor="@color/daynight_gray600s" />

    <ImageView
        android:id="@+id/toast_iv"
        android:layout_width="@dimen/single_toast_size"
        android:layout_height="@dimen/single_toast_size"
        android:background="@drawable/kakao_sdk_index_bg"
        android:maxWidth="@dimen/single_toast_size"
        android:minWidth="@dimen/single_toast_size"
        android:padding="@dimen/single_toast_image_view_padding"
        android:visibility="gone"
        app:backgroundTint="?attr/gray050s" />
</FrameLayout>
