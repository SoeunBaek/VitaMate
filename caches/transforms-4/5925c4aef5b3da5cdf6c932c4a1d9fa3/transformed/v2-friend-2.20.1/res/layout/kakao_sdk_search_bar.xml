<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_bar_background"
        android:layout_width="match_parent"
        android:layout_height="?attr/search_bar_height"
        android:layout_marginHorizontal="@dimen/search_bar_margin_horizontal"
        android:layout_marginTop="?attr/search_bar_margin_top"
        android:layout_marginBottom="@dimen/search_bar_margin_bottom"
        android:background="@drawable/kakao_sdk_bg_round_rect_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/daynight_gray050a"
        tools:layout_height="@dimen/search_bar_height"
        tools:layout_marginTop="0dp">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="?attr/search_bar_edit_text_margin_start"
            android:layout_marginTop="?attr/search_bar_edit_text_margin_top"
            android:layout_marginBottom="?attr/search_bar_edit_text_margin_bottom"
            android:background="@color/transparent"
            android:ellipsize="end"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:inputType="textNoSuggestions"
            android:lines="1"
            android:textColor="?attr/gray900s"
            android:textColorHint="?attr/gray400s"
            android:textCursorDrawable="@drawable/kakao_sdk_bg_cursor"
            android:textSize="?attr/search_bar_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/placeholder_margin_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_marginBottom="@dimen/search_bar_edit_text_margin_bottom"
            tools:layout_marginStart="@dimen/search_bar_edit_text_margin_start"
            tools:layout_marginTop="@dimen/search_bar_edit_text_margin_top"
            tools:textColor="@color/daynight_gray900s"
            tools:textColorHint="@color/daynight_gray400s"
            tools:textSize="@dimen/search_bar_text_size" />

        <View
            android:id="@+id/placeholder_margin_view"
            android:layout_width="?attr/search_bar_edit_text_margin_start"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/search_bar_delete_btn"
            app:layout_constraintStart_toEndOf="@id/search_bar"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_bar_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="?attr/search_bar_delete_button_padding"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/search_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_bar"
            tools:layout_marginEnd="@dimen/search_bar_delete_button_margin_end"
            tools:padding="@dimen/search_bar_delete_button_padding"
            tools:visibility="visible">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/accessibility_delete"
                android:src="@drawable/kakao_sdk_ico_clear"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="?attr/gray200a"
                tools:tint="@color/daynight_gray200a" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>