<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/back_btn"
        android:contentDescription="@string/accessibility_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="?attr/title_bar_back_button_margin_vertical"
        android:background="@android:color/transparent"
        android:paddingStart="?attr/title_bar_back_button_margin_start"
        android:paddingEnd="0dp"
        android:src="?attr/title_bar_back_button_drawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/gray900s"
        tools:layout_marginVertical="@dimen/title_bar_back_button_margin"
        tools:paddingStart="@dimen/title_bar_back_button_margin"
        tools:src="@drawable/kakao_sdk_btn_back" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="?attr/title_bar_text_margin_start"
        android:layout_marginTop="?attr/title_bar_text_margin_top"
        android:layout_marginEnd="?attr/title_bar_text_margin_end"
        android:layout_marginBottom="?attr/title_bar_text_margin_bottom"
        android:ellipsize="end"
        tools:text="@string/select_friend"
        android:maxLines="1"
        android:textColor="?attr/gray900s"
        android:textSize="?attr/title_bar_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/done_btn_layout"
        app:layout_constraintStart_toEndOf="@id/back_btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginBottom="@dimen/title_bar_text_margin_bottom"
        tools:layout_marginEnd="@dimen/title_bar_text_margin_end"
        tools:layout_marginStart="@dimen/title_bar_text_margin_start"
        tools:layout_marginTop="@dimen/title_bar_text_margin_top"
        tools:textColor="@color/daynight_gray900s"
        tools:textSize="@dimen/title_bar_text_size" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/done_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- title이 길어지면 picked_count_tv의 자리수에 따라  -->
        <!-- 뷰가 변하는 것을 방지하기 위해 text를 10 설정 -->
        <TextView
            android:id="@+id/picked_count_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/title_bar_picked_count_margin_end"
            android:gravity="end"
            android:text="10"
            android:textColor="#f1cc3a"
            android:textSize="@dimen/title_bar_picked_count_text_size"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/done_btn"
            app:layout_constraintEnd_toStartOf="@id/done_btn"
            app:layout_constraintTop_toTopOf="@id/done_btn"
            tools:text="20"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/done_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/title_bar_done_button_margin_top"
            android:layout_marginEnd="@dimen/title_bar_done_button_margin_end"
            android:layout_marginBottom="?attr/title_bar_done_button_margin_bottom"
            android:enabled="false"
            android:text="@string/ok"
            android:textColor="@color/kakao_sdk_done_button_color"
            android:textSize="@dimen/title_bar_done_button_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_marginBottom="@dimen/title_bar_done_button_margin_bottom"
            tools:layout_marginTop="@dimen/title_bar_done_button_margin_top" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>