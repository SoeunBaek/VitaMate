<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friends_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:importantForAccessibility="no"
        android:paddingBottom="@dimen/friends_list_padding_bottom"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="20"
        tools:listitem="@layout/kakao_sdk_item_friend_picker" />

    <com.kakao.sdk.friend.view.SideIndexView
        android:id="@+id/sideIv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginVertical="?attr/sideindex_margin_vertical"
        android:layout_marginTop="@dimen/sideindex_margin_vertical"
        android:layout_marginEnd="@dimen/sideindex_margin_end"
        android:layout_marginBottom="@dimen/sideindex_margin_vertical"
        android:background="@drawable/kakao_sdk_indexbar_bg"
        android:paddingTop="@dimen/sideindex_padding_small"
        android:paddingBottom="@dimen/sideindex_padding_small"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sideindex_text_color="#808080"
        app:sideindex_text_size="@dimen/sideindex_text_size"
        tools:layout_marginVertical="?attr/sideindex_margin_vertical"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>