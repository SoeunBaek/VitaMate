<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kakao.sdk.friend.view.TabFragment">

    <com.kakao.sdk.friend.view.EmptyView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/title_layout"
            layout="@layout/kakao_sdk_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/tab_layout_height"
            android:layout_marginHorizontal="@dimen/tab_layout_margin_horizontal"
            tools:layout_height="@dimen/tab_layout_height">

            <TextView
                android:id="@+id/friend_tab"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/friend"
                android:textSize="@dimen/tab_layout_text_size"
                app:layout_constraintBottom_toTopOf="@id/tab_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/chat_tab"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chat_tab"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/chat"
                android:textSize="@dimen/tab_layout_text_size"
                app:layout_constraintBottom_toTopOf="@id/tab_layout"
                app:layout_constraintLeft_toRightOf="@id/friend_tab"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_indicator_height"
                android:importantForAccessibility="noHideDescendants"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tabGravity="fill"
                app:tabIndicatorColor="?attr/gray900s"
                app:tabMaxWidth="0dp"
                app:tabMode="fixed"
                app:tabRippleColor="@color/transparent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_divider_height"
            android:layout_marginBottom="?attr/tab_layout_margin_bottom"
            android:background="?attr/gray200a" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:focusable="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>